@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}
<partial name="_Notification"/>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1>Category Index</h1>
        </div>
        <div class="col-6 text-end">
            <a asp-area="Admin" asp-controller="Category" asp-action="Create" class="btn btn-warning">Add Category</a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr><th>Category</th><th>DisplayOrder</th></tr>
    </thead>
    <tbody>
        <form method="post">
        @foreach (var obj in Model)
        {
            <tr>
                <td style="width:50%">@obj.Name</td>
                <td style="width:50%">@obj.DisplayOrder</td>
                <td style="width:50%">
                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-warning">Edit</a>
                </td>
                <td style="width:50%">
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-light">Delete</a>
                </td>
            </tr>
        }
        </form>
    </tbody>
</table>

